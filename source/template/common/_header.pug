.header
  .container
    nav.main-menu
        ul.main-menu__list
            each val, index in ['About', 'Logo', 'Blog']
                if val == 'Logo'
                    li.main-menu__elem
                        .logo
                            a.logo-img(href='#', title='anivash.com')
                                img.logo__img(src='', alt='Logotype')
                else
                    li.main-menu__elem
                        a.main-menu__link(href='', title=val, class={'main-menu__link_active': index == 0})= val

